<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/dialog_themnv">

    <TextView
        android:id="@+id/tvTaskDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Thêm nhiệm vụ"
        android:textColor="#0080D6"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Khách hàng"
            android:textColor="@color/colorBlue"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spnKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ngày lấy"
            android:textColor="@color/colorBlue"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etPickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021-05-20"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ngày giao"
            android:textColor="@color/colorBlue"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etDropoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021-05-22"
            android:textSize="20dp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/cbApprovee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approve"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cbPublice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cbCancele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreen"
            android:text="Thêm"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btnred"
            android:text="Hủy"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

    </LinearLayout>


</LinearLayout>